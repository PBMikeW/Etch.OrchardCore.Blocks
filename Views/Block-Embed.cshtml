<div class="mb-4 embed embed--@Model.Service embed--ratio-16-9">

    <div class="embed__source videoWrapper mb-3">
        <iframe src="@Model.SourceUrl" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>

    @if (Model.HasCaption)
    {
        <p class="embed__caption">@Html.Raw(Model.Caption)</p>
    }
</div>
